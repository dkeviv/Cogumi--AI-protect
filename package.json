{
  "name": "cogumi-ai-protect",
  "version": "0.1.0",
  "private": true,
  "description": "Universal Agent Red Team SaaS - AI Agent Security Testing Platform",
  "workspaces": [
    "apps/*",
    "packages/*",
    "kits/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "db:generate": "cd packages/db && pnpm prisma generate",
    "db:migrate": "cd packages/db && pnpm prisma migrate dev",
    "db:studio": "cd packages/db && pnpm prisma studio",
    "typecheck": "turbo run typecheck"
  },
  "devDependencies": {
    "turbo": "^1.11.3",
    "typescript": "^5.3.3",
    "prettier": "^3.1.1",
    "@types/node": "^20.10.6"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
