# Environment Variables for Self-Hosted Deployment
# Copy this file to .env and fill in the values

# === Database Configuration ===
POSTGRES_DB=cogumi
POSTGRES_USER=cogumi
POSTGRES_PASSWORD=changeme_secure_password
POSTGRES_PORT=5432

# === Redis Configuration (Optional) ===
REDIS_PORT=6379

# === Application Configuration ===
WEB_PORT=3000
NEXTAUTH_URL=https://your-domain.com
NEXTAUTH_SECRET=changeme_generate_with_openssl_rand_base64_32

# === Cron Jobs ===
# Secret for protecting cron endpoints
CRON_SECRET=changeme_another_secure_secret

# === Google OAuth (Optional) ===
# If not using OAuth, leave these empty and use email/password auth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# === Sidecar Configuration ===
# Token generated from the UI after creating a project
SIDECAR_TOKEN=
SIDECAR_PORT=8888

# === Advanced Settings (Optional) ===
# NODE_ENV=production
# LOG_LEVEL=info
