# Environment variables for local development

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/cogumi_ai_protect?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here-change-in-production"

# Google OAuth (get from Google Cloud Console)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Fixture mode (set to true to use fixture data instead of real API)
NEXT_PUBLIC_USE_FIXTURES="false"

# Worker
WORKER_CONCURRENCY="5"

# Sidecar (for customer environment)
# SIDECAR_TOKEN="will-be-generated-in-ui"
# PROJECT_ID="will-be-generated-in-ui"
# INGEST_URL="http://localhost:3000/api/ingest/events"
# HEARTBEAT_INTERVAL_SEC="30"
# BATCH_MAX_EVENTS="100"
# BATCH_FLUSH_MS="5000"
