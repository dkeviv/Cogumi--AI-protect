# Environment variables for local development

# Web port (change if 3000 is taken)
WEB_PORT=3000

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/cogumi_ai_protect?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="demo-secret-key-change-in-production-min-32-chars"

# Email Configuration (Gmail SMTP)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="your-gmail@gmail.com"
SMTP_PASSWORD="your-gmail-app-password"
SMTP_FROM_EMAIL="noreply@yourdomain.com"
SMTP_FROM_NAME="COGUMI AI Protect"

# Demo mode - skip email verification for local testing
# Set to false in production to require email verification
SKIP_EMAIL_VERIFICATION=true

# OpenRouter API Configuration
OPENROUTER_API_KEY="sk-or-v1-your-key-here"
OPENROUTER_MODEL="meta-llama/llama-3.1-70b-instruct"
OPENROUTER_MAX_TOKENS="1000"
OPENROUTER_TEMPERATURE="0.7"
# Rate limiting for demo (requests per minute)
OPENROUTER_REQUESTS_PER_MINUTE="20"

# Fixture mode (set to true to use fixture data instead of real API)
NEXT_PUBLIC_USE_FIXTURES="false"

# Worker
WORKER_CONCURRENCY="5"

# Quota limits (configurable)
MAX_RUN_DURATION_MINUTES="30"
MAX_EVENTS_PER_MINUTE="300"

# Sidecar (for customer environment)
# SIDECAR_TOKEN="will-be-generated-in-ui"
# PROJECT_ID="will-be-generated-in-ui"
# INGEST_URL="http://localhost:3000/api/ingest/events"
# HEARTBEAT_INTERVAL_SEC="30"
# BATCH_MAX_EVENTS="100"
# BATCH_FLUSH_MS="5000"
