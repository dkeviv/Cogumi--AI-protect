# Environment variables for COGUMI AI Protect

# ============================================
# Database Configuration
# ============================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=cogumi-ai-protect
POSTGRES_PORT=5434

# Database URL for applications
# For Docker: Use container name 'postgres'
# For local dev: Use 'localhost:5434'
DATABASE_URL="postgresql://postgres:postgres@localhost:5434/cogumi-ai-protect?schema=public"

# ============================================
# Redis Configuration
# ============================================
REDIS_PORT=6379
REDIS_URL="redis://localhost:6379"

# ============================================
# Web Server Configuration
# ============================================
WEB_PORT=3002
NODE_ENV=development

# ============================================
# NextAuth Configuration
# ============================================
NEXTAUTH_URL="http://localhost:3002"
NEXTAUTH_SECRET="demo-secret-key-change-in-production-min-32-chars"

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# ============================================
# Email Configuration (Gmail SMTP)
# ============================================
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="your-gmail@gmail.com"
SMTP_PASSWORD="your-gmail-app-password"
SMTP_FROM_EMAIL="noreply@yourdomain.com"
SMTP_FROM_NAME="COGUMI AI Protect"

# Demo mode - skip email verification for local testing
# Set to false in production to require email verification
SKIP_EMAIL_VERIFICATION=true

# ============================================
# Worker Configuration
# ============================================
WORKER_CONCURRENCY=5

# ============================================
# Application Limits
# ============================================
MAX_RUN_DURATION_MINUTES=30
MAX_EVENTS_PER_MINUTE=300

# ============================================
# Security
# ============================================
# Cron secret for scheduled jobs
CRON_SECRET="847a9777eb8ecc853f9dac473a0f79801d98ea67de3b0f16a1484364d3cad10d"

# ============================================
# Optional: Demo Agent Configuration
# ============================================
# Uncomment if running demo agent separately
# OPENROUTER_API_KEY="sk-or-v1-your-key-here"
# OPENROUTER_MODEL="meta-llama/llama-3.1-70b-instruct"
# OPENROUTER_MAX_TOKENS="1000"
# OPENROUTER_TEMPERATURE="0.7"
# OPENROUTER_REQUESTS_PER_MINUTE="20"

# ============================================
# Development/Testing
# ============================================
# Fixture mode (set to true to use fixture data instead of real API)
NEXT_PUBLIC_USE_FIXTURES=false
